<div class="jumbotron">
  <h1>Eat Da Burger</h1>
</div>

<h2>Available Burgers</h2>

<ul>
    {{#each burger}}
    {{#unless devoured}}

    <p>
    {{this.burger_name}}
            <button data-id="{{this.id}}" class="devourBurger">Devour</button>
            <button data-id="{{this.id}}" class="deleteBurger">Remove</button>
    </p>
    
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <p>
            {{this.burger_name}}
            <button data-id="{{this.id}}" class="deleteBurger">Remove</button>
        </p>
    {{/if}}
    {{/each}}
</ul>


<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  

  <button type="submit">Add Burger</button>
  </div>
 <p>Enter a burger you would like to eat and click the "Add Burger" button.</p> 
 </form>